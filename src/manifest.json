{
    "name": "Choose Color",
    "version": "1.0",
    "description": "Change White Boring Background color to your favourite color",
    "manifest_version": 2,
    "permissions": [
        "webNavigation",
        "storage",
        "https://*/*",
        "http://*/*",
        "tabs"
    ],
    "background": {
        "scripts": [
            "background.js",
            "runtime.js"
        ],
        "persistent": true
    },
    "icons": { "16": "./assets/icon16.png",
        "48": "./assets/icon48.png",
       "128": "./assets/icon128.png" },
    "page_action": {
        "default_popup": "index.html"
    }
}